<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">50sp</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/wood2</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- second screen theme. -->
    <style name="AppTheme2" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
        <item name="android:actionBarSize">50sp</item>
    </style>

    <style name="MyActionBar2"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/wood2</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText2</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText2"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- third screen theme. -->
    <style name="AppTheme3" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>
