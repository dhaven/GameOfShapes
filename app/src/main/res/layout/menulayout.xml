<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wood"
    tools:context="com.david.gameofshapes.Activities.MenuActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:src="@drawable/title"
        android:id="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="puzzles"
        android:id="@+id/puzzles"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="goToPuzzles" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speedrun"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/puzzles"
        android:layout_alignStart="@+id/puzzles"
        android:onClick="goToSpeedrun" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stats"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="55dp"
        android:onClick="goToStats" />

</RelativeLayout>
